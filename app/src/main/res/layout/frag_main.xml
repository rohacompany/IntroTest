<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/view_main_card_view_layout_2"
            layout="@layout/view_main_calendar_view" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/view_main_card_view_layout_1"
            layout="@layout/view_main_card_view"
            />

        <include
            android:id="@+id/view_main_card_view_layout_2"
            layout="@layout/view_main_card_view" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/view_main_card_view_layout_3"
            layout="@layout/view_main_card_view"

            />

        <include
            android:id="@+id/view_main_card_view_layout_4"
            layout="@layout/view_main_card_view" />

    </LinearLayout>

</LinearLayout>