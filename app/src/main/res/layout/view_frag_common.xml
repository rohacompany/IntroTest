<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/view_frag_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="농가기본정보"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_search_result_summary"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            app:bootstrapText="{fa-search} 결과 조회"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_search_result_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:bootstrapBrand="info"
            app:bootstrapSize="xl"
            app:bootstrapText="{fa-search} 요약본 조회"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false"
            android:layout_toStartOf="@+id/btn_search_reset"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_search_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            app:bootstrapBrand="danger"
            app:bootstrapSize="xl"
            app:bootstrapText="{fa-refresh} 초기화"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/LightGrey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:text="시도" />

            <Spinner
                android:id="@+id/sp_sido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:prompt="@string/all" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="구군" />

            <Spinner
                android:id="@+id/sp_gugun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/area1_array"
                android:prompt="@string/all" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="읍면동" />

            <Spinner
                android:id="@+id/sp_dong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/area2_array"
                android:prompt="@string/all" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:text="축협명" />

            <EditText
                android:id="@+id/et_chukhyup_name"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:text="농가명" />

            <EditText
                android:id="@+id/et_nonga_name"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:text="품종" />

            <Spinner
                android:id="@+id/sp_pumjong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:entries="@array/pumjong_array" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:text="성별" />

            <Spinner
                android:id="@+id/sp_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/sex_array" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="사육상태" />

            <Spinner
                android:id="@+id/sp_breed_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/sayuksangtae_array" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="등록구분" />

            <Spinner
                android:id="@+id/sp_deungrokgubun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/deungrokgubun_array" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="귀표번호" />

            <EditText
                android:id="@+id/et_gwipyobeonho"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="어미귀표번호" />

            <EditText
                android:id="@+id/et_mom_gwipyobeonho"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="아비씨\n수소번호(kpn)" />

            <EditText
                android:id="@+id/et_abissisusobeonho"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:hint="KPN" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="월령" />

            <EditText
                android:id="@+id/et_wolryeong_start"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:text="~" />

            <EditText
                android:id="@+id/et_wolryeong_end"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >

            <TextView
                style="@style/basic_searchbox_textview_enabled"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="산차" />

            <EditText
                android:id="@+id/et_sancha_start"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:text="~" />

            <EditText
                android:id="@+id/et_sancha_end"
                style="@style/basic_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/LightGrey" />

</LinearLayout>