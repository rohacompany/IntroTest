<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        android:id="@+id/view_app_bar_uiman"
        layout="@layout/content_uimain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/nav_header_uimain" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/LightGrey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:gravity="center"
                    android:padding="10dp">

                    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                        android:id="@+id/btn_profile"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_profile_edit"
                        app:bootstrapBrand="danger"
                        app:hasBorder="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_id"
                        style="@style/basic_drawable_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="사용자 ID : Test"
                        android:textColor="@color/Gray"
                        android:textSize="@dimen/common_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@color/White"
                        android:gravity="center">

                        <com.beardedhen.androidbootstrap.BootstrapButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bootstrapBrand="danger"
                            app:bootstrapSize="xl"
                            app:bootstrapText="{fa_sign_out} 로그아웃"
                            app:buttonMode="regular"
                            app:roundedCorners="true"
                            app:showOutline="false"
                            android:id="@+id/ibtn_logout"

                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/basic_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:id="@+id/uimain_calendar_container"
                        >

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_calendar" />


                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imageView"
                            android:layout_toRightOf="@+id/imageView"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="일정관리"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/common_text_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/basic_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:id="@+id/btn_setting"
                        >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_settings" />


                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imageView2"
                            android:layout_toRightOf="@+id/imageView2"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="설정"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/common_text_size" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/listPreferredItemHeight"
                        android:background="@color/LightGrey"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="가상교배"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:id="@+id/tv_menu_gasang_gyobae"
                            android:clickable="true"
                            android:focusable="true"
                            />

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="경제성분석"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:id="@+id/tv_nongga_bangyeokgwanri"
                            android:clickable="true"
                            android:focusable="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/listPreferredItemHeight"
                        android:layout_marginTop="1dp"
                        android:background="@color/LightGrey"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="업무일지"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:id="@+id/tv_plan"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="showNotWorking"
                            />

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:id="@+id/tv_gaeche_geoseejeongbo"
                            android:clickable="true"
                            android:focusable="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/listPreferredItemHeight"
                        android:layout_marginTop="1dp"
                        android:background="@color/LightGrey"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_bunmanjeongbo"
                            />

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_biyukjeongbo"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/listPreferredItemHeight"
                        android:layout_marginTop="1dp"
                        android:background="@color/LightGrey"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_iryeokjeongbo"
                            />

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_yebangjeobjongjeongbo"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/listPreferredItemHeight"
                        android:layout_marginTop="1dp"
                        android:background="@color/LightGrey"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_chulhajeongbo"
                            />

                        <TextView
                            style="@style/basic_drawable_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/common_text_size"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_gaeche_dochukjeongbo"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:background="@color/White"
                        android:orientation="horizontal"></LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0"
                    android:background="@color/White"
                    android:orientation="vertical"

                    >

                    <TextView
                        style="@style/basic_drawable_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/White"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:text="게시판"
                        android:textColor="#903f52"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/container_notice"

                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_notice" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="공지사항"
                                android:textColor="#4d4d4d"
                                android:textSize="@dimen/common_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_comment" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="종무우찾기"
                                android:textColor="#4d4d4d"
                                android:textSize="@dimen/common_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/basic_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_analysis" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="통계"
                                android:textColor="#4d4d4d"
                                android:textSize="@dimen/common_text_size" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
