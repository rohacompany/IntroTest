<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="16dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/card_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/table_result_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="검색필드모음"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <CheckBox
                android:id="@+id/view_search_box_ck_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="농가기본정보"
                android:checked="true"
                android:clickable="false"
                android:enabled="false"
                />

            <CheckBox
                android:id="@+id/view_search_box_ck_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방역정보"
                android:layout_marginLeft="5dp"
                />

            <CheckBox
                android:id="@+id/view_search_box_ck_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개체정보"
                android:layout_marginLeft="5dp"
                />

            <CheckBox
                android:id="@+id/view_search_box_ck_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질병정보"
                android:layout_marginLeft="5dp"
                />

            <CheckBox
                android:id="@+id/view_search_box_ck_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정/분만정보"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
